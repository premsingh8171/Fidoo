<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:gravity="bottom|left">
        <shape android:shape="rectangle"

            >


            <padding android:left="5dp"
                android:right="5dp"/>
            <gradient android:type="radial"
                android:gradientRadius="30dp"
                android:centerColor="#4D0A801E"
                android:endColor="#00000000"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00090909"
                />

        </shape>

    </item >



    <item android:top="0dp"
        android:left="5dp"
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle"
            >

            <size android:height="48dp"
                android:width="48dp"/>
            <solid android:color="@color/white" />
            <corners android:radius="12dp"/>
        </shape>

    </item >

    <!--  left shadow -->
    <item android:top="0dp"
        android:left="5dp"
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size android:height="48dp"
                android:width="48dp"/>
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#4DDCE5DE"
                android:startColor="#00FF0000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item android:top="0dp"
        android:left="5dp"
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size android:height="48dp"
                android:width="48dp"/>
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.85"
                android:endColor="#4D084D14"
                android:startColor="#00FF0000" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item android:top="0dp"
        android:left="5dp"
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <size android:height="48dp"
                android:width="48dp"/>
            <gradient
                android:angle="270"
                android:centerColor="#00FF0000"
                android:centerY="0.1"
                android:endColor="#00FF0000"
                android:startColor="#4DDCE5DE" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item android:top="0dp"
        android:left="5dp"
        android:right="10dp"
        android:bottom="5dp">
        <shape android:shape="rectangle"
            >
            <size android:height="48dp"
                android:width="48dp"
                />

            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.15"
                android:endColor="#00FF0000"

                android:startColor="#4D084D14" />
            <corners android:radius="12dp"
                />
        </shape>
    </item>
</layer-list>