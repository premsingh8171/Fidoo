<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape
            >


            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"

                 />

            <solid android:color="#00000000" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0.5dp"
                android:right="0.5dp"
                 />

            <solid android:color="#1A000000" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:left="1dp"
                android:right="1dp"
                />

            <solid android:color="#0D000000" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1.5dp"
                android:right="1.5dp"
                 />

            <solid android:color="#00000000" />

            <corners android:radius="10dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>

        <shape>

            <solid android:color="#ffffff" />
            <stroke
                android:color="#246A30"
                android:width="1dp"/>

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>