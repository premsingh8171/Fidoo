<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addDismisspopUp_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/round_box"
        android:layout_marginBottom="@dimen/margin_100dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="@dimen/dimen_5dp"
            android:id="@+id/myContactTxt"
            android:fontFamily="@font/proxima"
            android:textSize="@dimen/text_size_14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Number"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:textColor="@color/hint_color_tin"/>

        <TextView
            android:padding="@dimen/dimen_5dp"
            android:id="@+id/addBookTxt"
            android:fontFamily="@font/proxima"
            android:textSize="@dimen/text_size_14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address book"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/hint_color_tin"/>

        <TextView
            android:layout_marginBottom="@dimen/margin_15dp"
            android:padding="@dimen/dimen_5dp"
            android:id="@+id/AddManuallyTxt"
            android:fontFamily="@font/proxima"
            android:textSize="@dimen/text_size_14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Manually"
            android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/hint_color_tin"/>

        <TextView
            android:paddingStart="@dimen/dimen_5dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:id="@+id/remove_conDetailsTxt"
            android:fontFamily="@font/proxima"
            android:textSize="@dimen/text_size_14sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remove contact details"
            android:textColor="@color/Red_color"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>