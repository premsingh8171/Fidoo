<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/manage_location_bottomsheet_bg">
    <LinearLayout
        android:id="@+id/manage_location_Off_or_On"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="13dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_location_off"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your device location is off"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:lineHeight="28dp"
                    android:layout_marginStart="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Please turn on device location to get accurate and fast delivery"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"
                android:text="Turn On"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Delivery Address"
        android:lineHeight="28dp"
        android:padding="@dimen/margin_15dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <View
        android:alpha=".4"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!--

                                          -->
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200dp">
        <RelativeLayout
            android:id="@+id/rlManageSavedAddressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGray"
            android:background="@color/lightGray">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvManageSavedAddress"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@color/lightGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spanCount="1"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <!--

                                      -->
    <LinearLayout
        android:padding="13dp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/home_locpin"
            android:layout_width="25dp"
            android:layout_gravity="center"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:lineHeight="20dp"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/home_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teekli Rd, Sector 68, Gurugram"
                    android:lineHeight="20dp"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:alpha=".4"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/lv_add_new_address"
        android:padding="13dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/home_locpin"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:gravity="center"
                android:layout_gravity="center"
                android:lineHeight="20dp"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#359C47"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:alpha=".4"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

