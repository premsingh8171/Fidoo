<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F6F5F5"
    android:padding="15dp"
    android:layout_margin="3dp">
    <LinearLayout
        android:id="@+id/manage_location_Off_or_On"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="13dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_location_off"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your device location is off"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:lineHeight="28dp"
                    android:layout_marginStart="15dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Please turn on device location to get accurate and fast delivery"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/dimen_60dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="Turn On"/>
        </LinearLayout>
    </LinearLayout>
    <!--

                                          -->
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rvManageSavedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lightGray"
            android:background="@color/lightGray">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@color/lightGray"
                android:id="@+id/search_add_rv_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spanCount="1"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <!--

                                      -->
    <View
        android:alpha=".4"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="13dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/home_locpin"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:gravity="center"
                android:layout_gravity="center"
                android:lineHeight="20dp"
                android:layout_marginStart="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:alpha=".4"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

