<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lottie="http://clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FCFAF6F6"
        android:layout_height="match_parent">


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <RelativeLayout
                android:id="@+id/bgcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:elevation="@dimen/margin_15dp"
                    app:cardCornerRadius="@dimen/margin_15dp">

                    <LinearLayout
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backBtnNew"
                            android:padding="@dimen/margin_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_12dp"
                            android:layout_marginTop="@dimen/margin_16dp"/>

                        <TextView
                            android:id="@+id/tv_order_id_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5dp"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_weight=".5"
                            android:fontFamily="@font/proximanovo"
                            android:text="ORDER #"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tv_order_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_order_id_label"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_weight="9"
                            android:fontFamily="@font/proxima"
                            android:paddingTop="@dimen/margin_1dp"
                            android:text="123456"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/customer_care_fmL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_order_id_label"
                            android:layout_marginTop="@dimen/margin_15dp"
                            android:layout_marginEnd="@dimen/margin_15dp"
                            android:drawablePadding="@dimen/dimen_5dp"
                            android:fontFamily="@font/proximanovasemibold"
                            android:gravity="end"
                            android:padding="@dimen/margin_10"
                            android:text="Help"
                            android:textColor="@color/primary_color"
                            android:textSize="@dimen/text_size_16sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/giflayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/ordrePlaceGif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="300dp"
                        android:scaleType="fitXY"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>

                    <ImageView
                        android:id="@+id/cancelBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="35dp"
                        android:layout_marginBottom="436dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/eta_lay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/watch_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/watch_icon"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/estimated_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/watch_icon"
                            android:text="ETA" />
                    </RelativeLayout>
                </RelativeLayout>






                <androidx.cardview.widget.CardView
                    android:id="@+id/ordstatus_lay_new"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/lightGray"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/margin_10"
                            android:src="@drawable/icon_info"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/margin_15dp"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:layout_toEndOf="@id/icon"
                            android:text="" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <androidx.coordinatorlayout.widget.CoordinatorLayout

                android:id="@+id/coordinatl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/bottomSheetBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F8F8"
                    android:isScrollContainer="true"
                    android:orientation="vertical"
                    app:behavior_hideable="false"
                    app:behavior_peekHeight="320dp"
                    app:layout_behavior="@string/bottom_sheet_behavior">

                    <LinearLayout
                        android:id="@+id/bottomLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F8F8F8"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/pullbar"
                                android:layout_marginTop="@dimen/margin_16dp"
                                android:layout_width="match_parent"
                                android:layout_marginEnd="@dimen/margin_120dp"
                                android:layout_marginStart="@dimen/margin_120dp"
                                android:layout_height="wrap_content"/>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/storeCardID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_15dp"
                                android:backgroundTint="@color/white"
                                android:visibility="gone"
                                app:cardCornerRadius="@dimen/margin_15dp"
                                app:cardElevation="@dimen/dimen_5dp">


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/driver_cardView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginRight="@dimen/margin_15dp"
                                android:backgroundTint="@color/white"
                                android:visibility="gone"
                                app:cardCornerRadius="@dimen/margin_15dp"
                                app:cardElevation="@dimen/dimen_5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:id="@+id/driver_img_onOrder"
                                            android:layout_width="@dimen/margin_45dp"
                                            android:layout_height="@dimen/margin_45dp"
                                            android:layout_marginStart="15dp"
                                            android:layout_marginTop="@dimen/margin_20dp"
                                            android:layout_marginBottom="@dimen/margin_20dp"
                                            android:background="@drawable/avatar"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:shapeAppearanceOverlay="@style/RoundedSequare"
                                            tools:srcCompat="@drawable/avatar" />

                                        <TextView
                                            android:id="@+id/tv_delivery_boy"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:fontFamily="@font/proxima"
                                            android:text=""
                                            android:textColor="@color/colorTitle"
                                            android:textSize="14sp"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintEnd_toStartOf="@+id/tv_delivery_boy_call"
                                            app:layout_constraintStart_toEndOf="@+id/driver_img_onOrder"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:id="@+id/tv_delivery_boy_status"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_5dp"
                                            android:fontFamily="@font/proxima"
                                            android:maxLines="1"
                                            android:text=""
                                            android:textColor="@color/colorTitle"
                                            android:textSize="12sp"
                                            android:visibility="gone"
                                            app:layout_constraintBottom_toBottomOf="@+id/tv_delivery_boy"
                                            app:layout_constraintLeft_toRightOf="@+id/tv_delivery_boy"
                                            app:layout_constraintTop_toTopOf="@+id/tv_delivery_boy" />

                                        <ImageView
                                            android:id="@+id/tv_delivery_boy_call"
                                            android:layout_width="@dimen/margin_45dp"
                                            android:layout_height="@dimen/margin_45dp"
                                            android:padding="@dimen/margin_12dp"
                                            android:src="@drawable/ic_call"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">




                                <!-- old ui order details and cancel -->
                                <RelativeLayout
                                    android:id="@+id/address_details_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="850dp"
                                    android:background="#F8F8F8"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">



                                    <RelativeLayout
                                        android:id="@+id/address_detail_lay"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp">

                                        <androidx.recyclerview.widget.RecyclerView
                                            android:id="@+id/recyclerView"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />


                                    </RelativeLayout>


                                </RelativeLayout>




                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/waitingLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="70dp"
                        android:background="#60000000"
                        android:clickable="true"
                        android:elevation="6dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proxima"
                            android:text="Order is being placed.."
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/cancelOrderBtn"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/red_rounded_solid"
                            android:fontFamily="@font/proxima"
                            android:gravity="center"
                            android:text="CANCEL ORDER"
                            android:textColor="@android:color/white"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/relativelayoutbottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/et_round_new"
                    android:elevation="10dp">

                    <LinearLayout
                        android:id="@+id/lastlayout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/storeDetailsViewContsl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:id="@+id/allitemlistlayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/et_round_new"
                                    android:visibility="visible"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent">

                                    <TextView
                                        android:visibility="gone"
                                        android:id="@+id/orderDetailsTxt1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:fontFamily="@font/proximanovasemibold"
                                        android:padding="@dimen/margin_5dp"
                                        android:text="View All Order list"
                                        android:textColor="#359C47" />
                                </RelativeLayout>

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/store_img_onOrder"
                                    android:layout_width="@dimen/margin_45dp"
                                    android:layout_height="@dimen/margin_45dp"
                                    android:layout_marginStart="@dimen/margin_20dp"
                                    android:layout_marginTop="@dimen/margin_20dp"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:background="@color/white"
                                    android:scaleType="fitXY"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:shapeAppearanceOverlay="@style/RoundedSequare"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <TextView
                                    android:id="@+id/store_name_txt_info1"
                                    android:layout_width="256dp"
                                    android:layout_height="25dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginTop="@dimen/margin_15dp"
                                    android:fontFamily="@font/proxima"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Hold on tight, a few seconds more."
                                    android:textColor="@color/colorTitle"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/callStore"
                                    app:layout_constraintStart_toEndOf="@+id/store_img_onOrder"
                                    app:layout_constraintTop_toTopOf="parent" />
                                <!--                                    is preparing your order-->

                                <ImageView
                                    android:id="@+id/callStore"
                                    android:layout_width="@dimen/margin_45dp"
                                    android:layout_height="@dimen/margin_45dp"
                                    android:layout_marginTop="@dimen/margin_25dp"
                                    android:layout_marginEnd="20dp"
                                    android:padding="@dimen/margin_12dp"
                                    android:paddingTop="@dimen/margin_40dp"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:src="@drawable/ic_vector"
                                    android:visibility="visible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>