<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backIconProfile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/arrow_backward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/proxima"
            android:text="Edit Info"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_user_single" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_image_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_user"
            android:layout_alignBottom="@+id/img_user"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_photo_camera_"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabCustomSize="@dimen/margin_40dp"
            app:fabSize="normal" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_32dp"
        android:background="@color/colorPrimary" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/black_rounded_empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp">

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#70000000"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:singleLine="true"
            android:background="@null"
            android:textSize="13sp"
            android:id="@+id/mobileEdt"
            android:fontFamily="@font/proxima"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:hint="Enter your phone number"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_rounded_empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp">

        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#70000000"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:singleLine="true"
            android:background="@null"
            android:id="@+id/nameEdt"
            android:paddingHorizontal="10dp"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/proxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="textCapWords"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:hint="Enter your full name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/black_rounded_empty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="50dp">

        <EditText
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColorHint="#70000000"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:singleLine="true"
            android:background="@null"
            android:textSize="13sp"
            android:id="@+id/emailEdt"
            android:gravity="center_vertical"
            android:fontFamily="@font/proxima"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:inputType="textEmailAddress"
            android:hint="Enter your email id"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/margin_8dp"
        android:paddingRight="@dimen/margin_8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight=".3"
            android:singleLine="false"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15sp" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_4dp"
            android:layout_weight=".7"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_8dp"
        android:paddingRight="@dimen/margin_8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".3"
            android:singleLine="false"
            android:text="Contact"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15sp" />

        <EditText
            android:id="@+id/edt_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_4dp"
            android:layout_weight=".7"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/margin_8dp"
        android:paddingRight="@dimen/margin_8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:layout_weight=".3"
            android:singleLine="false"
            android:text="Email"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_15sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_4dp"
            android:layout_weight=".7"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_15sp" />

    </LinearLayout>


    <Button
        android:id="@+id/save_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/margin_40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/black_rounded_solid"
        android:fontFamily="@font/proxima"
        android:text="SAVE"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_17sp" />


</LinearLayout>