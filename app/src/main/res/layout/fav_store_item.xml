<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_15dp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_margin="@dimen/margin_10"
            android:id="@+id/productImg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            app:shapeAppearanceOverlay="@style/RoundedSequare"/>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/margin_2dp"
                android:layout_alignRight="@+id/productImg"
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productImg"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text="Store name"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp" />

            <LinearLayout
                android:padding="@dimen/margin_2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:backgroundTint="@color/black"
                        android:layout_width="@dimen/text_size_17sp"
                        android:layout_height="@dimen/text_size_17sp"
                        android:background="@drawable/watch_icon"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_deliveryTime"
                        android:text="12Am"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorTextGray"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_10"
                        android:layout_width="@dimen/margin_15dp"
                        android:layout_height="@dimen/margin_10"
                        android:background="@drawable/pin"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_2km"
                        android:textColor="@color/colorTextGray"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/margin_2dp"
                    android:id="@+id/closing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_like"
                    android:fontFamily="@font/proxima"
                    android:maxLines="1"
                    android:text="closing time"
                    android:layout_marginEnd="15dp"
                    android:textSize="11sp"
                    android:layout_alignBaseline="@id/cuisine_types"
                    android:layout_alignParentEnd="true" />
                <TextView
                    android:paddingEnd="@dimen/margin_10"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/open_close_status"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/open"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/cuisine_types"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/storeName"
        android:fontFamily="@font/proxima"
        android:maxLines="1"
        android:text="@string/healthy_food_salads_italian"
        android:textSize="11sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_20dp"/>

    <ImageView
        android:id="@+id/btn_like"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_heart"
        android:layout_marginBottom="10dp"
        android:layout_alignEnd="@id/storeName"
        android:layout_below="@id/productImg"
        android:backgroundTint="@color/grey"
        android:visibility="gone"/>


    <View
        android:visibility="gone"
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/cuisine_types"
        android:layout_marginTop="10dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationLyt"
        android:layout_below="@id/v1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bookmark_icon"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_recommended"
                android:text="@string/recommend"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorTextGray"/>


        </LinearLayout>


    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/locationLyt"
        android:layout_marginTop="20dp"
        android:background="@color/colorGray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


</LinearLayout>