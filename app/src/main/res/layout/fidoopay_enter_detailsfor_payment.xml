<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="20dp"
            android:layout_marginTop="2dp"
            app:cardElevation="4dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/btnBackFromWallet"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/dimen_5dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:rotation="0"
                        android:src="@drawable/ic_back_fidoopay"
                        app:tint="@color/black" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:text="Payment to"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
       <ImageView
           android:layout_width="80dp"
           android:layout_marginTop="14dp"
           android:layout_height="80dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Lorem Ipsum"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="9868 - 750 - 666"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="wrap_content"
            android:text="â‚¹ 0"
            android:textColor="#292992"
            android:textSize="32sp"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:text="Drop a note"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        android:text="Having an Issue?"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="#818181"
        android:textSize="14sp"
        android:layout_above="@id/btnAddNewMember"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/btnAddNewMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima"
            android:layout_centerInParent="true"
            android:text="Send Money"
            android:textColor="#646667"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>