<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/curationItemLl"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/popular_curationImg"
            android:layout_width="match_parent"
            android:elevation="@dimen/margin_10"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"

            android:src="@drawable/default_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/popular_curationTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:capitalize="sentences"
            android:fontFamily="@font/proxima"
            android:gravity="center"
            android:inputType="textCapWords"
            android:maxLines="2"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12sp"
            android:textStyle="bold"
            app:fontFamily="@font/proxima"
            app:textAllCaps="false"
            tools:ignore="Deprecated" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemCurationSpace_ll"
        android:layout_width="@dimen/dimen_5dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/curationItemLl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>