<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_sendpackage_track_container"
    android:id="@+id/relate1main">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#66FFFFFF"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        android:id="@+id/maincard_fb"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:background="@drawable/straight_drawline"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate our Service"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:id="@+id/tv_rate11"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:padding="10dp"

                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_4"
                    android:layout_weight="2"

                    android:id="@+id/fb_star1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_4"
                    android:layout_weight="2"

                    android:id="@+id/fb_star2"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_4"
                    android:layout_weight="2"

                    android:id="@+id/fb_star3"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_4"
                    android:id="@+id/fb_star4"
                    android:layout_weight="2"

                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_4"
                    android:id="@+id/fb_star5"
                    android:layout_weight="2"

                    />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:id="@+id/card_fbet">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:id="@+id/et_fb"
                    android:background="@null"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:gravity="top"
                    android:hint="  Write Feedback(Optional)"
                    android:textSize="14sp"/>
        </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/feedback_submit"
                android:gravity="center"

                android:text="Submit" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>