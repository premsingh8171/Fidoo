<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLay"
    android:background="@color/lightGray"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:fontFamily="@font/proxima"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_yourAddresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/saved_addresses"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/locationImage"
        android:layout_width="@dimen/margin_30dp"
        android:layout_gravity="center"
        android:layout_height="@dimen/margin_30dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_yourAddresses"/>

    <TextView
        android:id="@+id/tv_address_title"
        android:textColor="@color/black"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Home"
        app:layout_constraintTop_toBottomOf="@+id/tv_yourAddresses"
        app:layout_constraintStart_toEndOf="@+id/locationImage" />

    <TextView
        android:id="@+id/setassDefaultTxt"
        android:layout_marginRight="@dimen/margin_10"
        app:layout_constraintRight_toLeftOf="@+id/selectedadd_img"
        android:textColor="@color/primary_color"
        android:fontFamily="@font/proxima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Set as default"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_title"
        app:layout_constraintTop_toTopOf="@+id/tv_address_title"
        android:textSize="@dimen/text_size_12sp" />

    <ImageView
        android:layout_marginRight="@dimen/margin_20dp"
        android:id="@+id/selectedadd_img"
        android:src="@drawable/filter_off"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_title"
        app:layout_constraintTop_toTopOf="@+id/tv_address_title"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@+id/tv_location"

        android:paddingEnd="@dimen/margin_20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/metropolis_medium"
        android:textSize="14sp"
        android:text="Teekli Rd, Sector 68, Gurugram"

        app:layout_constraintLeft_toRightOf="@+id/locationImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_title" />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/locationImage"
        android:padding="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:id="@+id/editAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/proxima"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:text="@string/edit"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/editAdd"
        android:padding="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/margin_20dp"
        android:id="@+id/deleteAdd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/proxima"
        android:layout_marginEnd="10dp"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:text="@string/delete"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />

    <View
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintTop_toBottomOf="@+id/editAdd"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:layout_marginStart="@dimen/margin_45dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorHint" />

</androidx.constraintlayout.widget.ConstraintLayout>