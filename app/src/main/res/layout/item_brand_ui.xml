<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_10"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/brand_itemImg"
        android:layout_width="@dimen/margin_100dp"
        android:layout_height="@dimen/margin_100dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/default_item" />


    <LinearLayout
        android:id="@+id/itemBrandSpace_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_120dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/shopItemClickll"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>