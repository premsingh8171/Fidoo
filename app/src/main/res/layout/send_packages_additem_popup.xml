<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/disable_gradientRl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <LinearLayout
        android:id="@+id/restrictionLl"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginBottom="@dimen/margin_110dp"
        android:background="@drawable/bg_restriction"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/restrictiontxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima"
                android:padding="@dimen/margin_10"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/deliveryChargesLl"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dimen_25dp"
        android:layout_marginBottom="@dimen/margin_40dp"
        android:background="@drawable/bg_restriction"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text="Standard Charges (upto 5 Kms)    "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/standardchanges1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text=" ₹ 30"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text="Standard Charges (above 5 Kms) "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/standardchanges2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:gravity="end"
                android:maxLines="1"
                android:text=" ₹ 35"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_10"
        android:id="@+id/deliveryChargesLl2"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_140dp"
        android:background="@drawable/bg_restriction2"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text="Standard Charges (upto 5 Kms)    "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/standardchanges12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text=" ₹ 30"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:maxLines="1"
                android:text="Standard Charges (above 5 Kms) "
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/standardchanges22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:fontFamily="@font/proxima"
                android:gravity="end"
                android:maxLines="1"
                android:text=" ₹ 35"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>