<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/iceItemClickll"
        android:layout_width="@dimen/margin_120dp"
        android:layout_height="@dimen/margin_160dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        android:background="@drawable/popular_curations_bg"
        android:elevation="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/ice_itemImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@drawable/default_item" />

        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center"
            android:id="@+id/text_iceCream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/itemIceSpace_ll"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/shopItemClickll"
        app:layout_constraintRight_toRightOf="parent" />


</LinearLayout>