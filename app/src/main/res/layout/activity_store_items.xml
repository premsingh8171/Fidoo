<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".restaurants.activity.StoreItemsActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/store_items_screen_header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:background="@color/white"
        android:outlineSpotShadowColor="@color/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:rotation="180"
            android:src="@drawable/ic_back_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimary" />


        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.149"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512" />

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:padding="8dp"
            android:src="@drawable/ic_cart"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/linear_progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="@id/store_items_screen_header" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/store_details_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fbfbfb"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_items_screen_header">

        <TextView
            android:paddingLeft="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/tv_location"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="29dp"
            android:text=""
            android:textSize="12sp"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:selectAllOnFocus="true"
            android:focusedByDefault="true"/>

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_location"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/location_icon" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/img_location"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/tv_cuisnes"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:text=""
            android:textSize="12sp"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/img_deliveryTime"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/tv_deliveryTime"
            android:src="@drawable/watch_icon" />

        <TextView
            android:id="@+id/tv_deliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cuisnes"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:text=""
            android:textSize="12sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/img_deliveryTime"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:alpha="0.5"
            android:background="#70000000"/>


        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_margin="10dp"
            android:background="@drawable/corner_radius_green"
            android:padding="10dp"
            android:text="buy 2 get 1 free"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_coupon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/tv_coupon"
            android:background="@drawable/corner_radius_green"
            android:padding="10dp"
            android:text="buy 2 get 1 free"
            android:textColor="@color/white"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/store_preference_Rlay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fbfbfb"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_details_lay">


        <ImageView
            android:id="@+id/veg_switch_img"
            android:src="@drawable/filter_off"
            android:layout_width="@dimen/margin_50dp"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimen_16sp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_vegOnly_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/veg_switch_img"
            android:fontFamily="@font/proxima"
            android:text="Veg Only" />

        <ImageView
            android:id="@+id/egg_switch_img"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/dimen_16sp"
            android:src="@drawable/filter_off"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_vegOnly_txt"/>

        <TextView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_containsEgg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/egg_switch_img"
            android:fontFamily="@font/proxima"
            android:text="Contains Egg" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/store_preference_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fbfbfb"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/store_preference_Rlay">


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/veg_switch"
            android:rotation="180"
            android:layout_width="@dimen/margin_50dp"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/dimen_16sp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_vegOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/veg_switch"
            android:fontFamily="@font/proxima"
            android:text="Veg Only" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/egg_switch"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/dimen_16sp"
            android:rotation="180"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@id/tv_vegOnly"/>

        <TextView
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_containsEgg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/egg_switch"
            android:fontFamily="@font/proxima"
            android:text="Contains Egg" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/search_dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/places_ic_search"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_dish"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Recommended"
            android:visibility="gone"/>

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/menu_icon"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:layout_below="@id/search_dish"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.5"
            android:src="@drawable/filter_icon"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        app:layout_constraintRight_toRightOf="@+id/store_preference_lay"
        app:layout_constraintLeft_toLeftOf="@+id/store_preference_lay"
        app:layout_constraintTop_toBottomOf="@id/store_preference_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp">

<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent">-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/storeItemsRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
<!--        </androidx.core.widget.NestedScrollView>-->




    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout">

            <RelativeLayout
                android:id="@+id/transLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#50000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="200dp"
                    android:layout_marginBottom="60dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                       
                        android:layout_marginBottom="5dp"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/metropolisbold"
                            android:text="Customization"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:fontFamily="@font/metropolis_regular"
                        android:text="Choose your customization"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/customItemsRecyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"
                    android:elevation="5dp"
                    android:fadingEdgeLength="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/add_remove_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#30000000"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="40dp">


                        <TextView
                            android:id="@+id/minusLay"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/countValue"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/countValue"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            app:layout_constraintLeft_toRightOf="@+id/minusLay"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/plusLay"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20dp"
                            app:layout_constraintLeft_toRightOf="@+id/countValue"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView

                        android:id="@+id/customAddBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/black_full_rounded_empty"
                        android:fontFamily="@font/metropolis_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="7dp"
                        android:text="50"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/cart_bg"
        android:backgroundTint="@color/white_trans"
        android:id="@+id/cartitemView_LLstore"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    <LinearLayout
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginLeft="@dimen/margin_5dp"
            android:id="@+id/itemQuantity_textstore"
            android:padding="@dimen/dimen_5dp"
            android:textSize="@dimen/text_size_14sp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:padding="@dimen/margin_5dp"
            android:textSize="@dimen/text_size_14sp"
            android:text="Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"/>

        <View
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:layout_width="1dp"
            android:background="@color/primary_color"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/totalprice_txtstore"
            android:padding="@dimen/margin_5dp"
            android:textSize="@dimen/text_size_14sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_gravity="end|center">

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="gone"
                android:id="@+id/cartviewFromStore"
                android:gravity="end|center_vertical"
                android:padding="@dimen/margin_5dp"
                android:textSize="@dimen/text_size_14sp"
                android:text="VIEW CART"
                android:textColor="@color/primary_color"
                android:drawableTint="@color/white"
                android:drawableLeft="@color/quantum_amber100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginEnd="@dimen/margin_15dp"
                android:layout_width="@dimen/margin_15dp"
                android:layout_height="@dimen/margin_15dp"
                android:src="@drawable/ic_cart"
                app:tint="@color/primary_color"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>



    </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/circular_border"
        android:backgroundTint="@color/white_trans"
        android:id="@+id/cat_FloatBtn"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:padding="@dimen/margin_15dp"
            android:src="@drawable/floation_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>