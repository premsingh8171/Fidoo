<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:elevation="20dp"
            android:layout_marginTop="2dp"
            app:cardElevation="4dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/btnBackFromWallet"
                    android:layout_width="@dimen/margin_40dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:layout_marginEnd="@dimen/margin_12dp"
                    android:layout_marginBottom="@dimen/margin_12dp"
                    android:backgroundTint="@color/white"
                    android:elevation="@dimen/dimen_5dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:rotation="0"
                        android:src="@drawable/ic_back_fidoopay"
                        app:tint="@color/black" />
                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_24dp"
                    android:layout_centerHorizontal="true"
                    android:text="My QR Code"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="FIDOOPAY"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="#292992"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"
                android:textSize="16sp"
                android:layout_marginTop="18dp"
                android:text="Payment Code For"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="9873 - 6887 - 88"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/ic_sample_qr_code_fidoopay"
                android:layout_marginTop="40dp"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="34dp"
                android:text="Scan this code to pay me 👈🏻"/>
            <View
                android:layout_width="72dp"
                android:background="#292992"
                android:layout_marginTop="40dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Available Balance"
                android:layout_marginTop="6dp"
                android:textColor="#818181"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="₹ 2567.00"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <RelativeLayout
        android:id="@+id/scanToPayFidoPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#292992"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/roundedbutton_fidoopay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:text="Fidoo Pay"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_fidoopay_logo" />
    </RelativeLayout>
</RelativeLayout>
