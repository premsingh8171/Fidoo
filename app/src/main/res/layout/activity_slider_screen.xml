<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SliderScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/sliderScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:id="@+id/dotthree"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_25dp"
                android:layout_above="@+id/sliderScreen"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_140dp"
                android:gravity="center"
                android:visibility="visible"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/dot_one"
                    android:layout_width="@dimen/margin_12dp"
                    android:layout_height="@dimen/margin_12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/selected_dot" />

                <ImageView
                    android:id="@+id/dot_two"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/unselect_dot" />

                <ImageView
                    android:id="@+id/dot_three"
                    android:layout_width="@dimen/margin_12dp"
                    android:layout_height="@dimen/margin_12dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:src="@drawable/unselect_dot" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/click__sliderBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <FrameLayout
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:background="@drawable/btn_bg_green"
            android:id="@+id/letsBegin_fml"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="@dimen/margin_50dp"
            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/letsBegin_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/proxima"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18sp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>