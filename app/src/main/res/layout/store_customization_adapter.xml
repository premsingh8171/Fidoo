<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@null"
    android:id="@+id/layoutt"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose Your First Sub"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/catName"
        android:maxLines="2"
        android:fontFamily="@font/metropolisbold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Please select any one option"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/descriptionTxt"
        android:fontFamily="@font/metropolis_regular"
        android:maxLines="2"
        android:layout_below="@+id/catName"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGrouppp" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@+id/descriptionTxt"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/subItemsRecyclervieww"
        android:layout_height="wrap_content"/>


</LinearLayout>