<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:elevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please provide your feedback below:"
                android:textAlignment="center" />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rating_bar"
                android:numStars="5"
                android:stepSize="1.0"
                android:isIndicator="false"
                android:theme="@style/RatingBar"
                />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/text"-->
                <!--android:text="We look forward to your feedback!"-->
                <!--android:padding="5dp"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="@color/gen_black"-->
                <!--android:textSize="16dp"-->
                <!--/>-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/feedback_text"
                android:inputType="textMultiLine"
                android:hint="Feedback"
                android:gravity="top"
                android:padding="5dp"
                android:background="@android:color/transparent"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:elevation="30dp"
            android:background="@color/gen_white"
            android:visibility="visible">
            <Button android:id="@+id/action_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Next Time"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/grey_dark1"
                android:textStyle="bold"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/view_width_small"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@color/grey_light" />

            <Button android:id="@+id/action_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/chatColor"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textColor="@color/gen_white"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button android:id="@+id/action_btn_minimize"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Minimize"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>