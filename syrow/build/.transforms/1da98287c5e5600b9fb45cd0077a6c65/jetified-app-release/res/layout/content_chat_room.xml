<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ChatRoomActivity"
    tools:showIn="@layout/activity_chat_room">

    <WebView
        android:padding="0dp"
        android:id="@+id/WebView_Syrow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9.9"
        >



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="#E6E4E4"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="#E6E4E4"
        android:id="@+id/lt"
        android:orientation="vertical">

        <com.udevel.widgetlab.TypingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:animateFrequency="700"
            app:animationOrder="lastOneFirst"
            app:backgroundColor="#eaeaea"
            app:backgroundType="rounded"
            app:dotAnimationDuration="600"
            app:dotAnimationType="Sliding"
            app:dotColor="#000"
            app:dotCount="3"
            app:dotHorizontalSpacing="4dp"
            app:dotMaxCompressRatio="70%"
            app:dotSecondColor="#fff"
            app:dotSize="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_btn_shape">
            <TextView
                android:id="@+id/brandText"
                android:layout_width="match_parent"
                android:background="@null"
                android:text="We run on "
                android:textColor="#fff"
                android:textAllCaps="false"

                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


            <TextView
                android:layout_width="wrap_content"
                android:background="@null"
                android:id="@+id/WebView_Syrow1"
                android:text="@string/poweredBy"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="11dp"/>
            </LinearLayout>
        </LinearLayout>




        <LinearLayout
            android:id="@+id/edit_text_border"
            android:background="@drawable/layout_bg_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_weight="2">



            <EditText android:id="@+id/message"
                android:layout_width="0dp"
                android:hint="Type a message"
                android:paddingLeft="10dp"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="14dp"
                android:inputType="textImeMultiLine|text"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <ImageView android:id="@+id/btn_attach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_attach_file_black_24dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                />

            <ImageView android:id="@+id/btn_send"
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:background="@null"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_gravity="center"
                android:padding="10dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
