<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textIsSelectable="true"
            android:text=""
            android:textColor="#fff"
            android:padding="5dp"
            android:background="@drawable/chat_bubble_system"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textIsSelectable="true"
            android:elevation="2dp"
            android:background="@drawable/chat_bubble_system"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_message"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/chat_bubble_system"
            android:padding="5dp"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/doc_message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:padding="5dp"
                android:elevation="2dp"
                android:layout_gravity="center"
                android:src="@drawable/word"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/doc_message_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:maxLength="25"
                android:text="1536220468_79_Sign-Up_URL_Structure.xlsx "
                android:textSize="12dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/audiolayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@drawable/chat_bubble_system"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="0dp">


            <com.keenfin.audioview.AudioView
                android:id="@+id/live"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:minified="true"
                app:primaryColor="@color/chatColor"
                app:selectControls="false"
                app:showTitle="false" />
        </LinearLayout>


    </RelativeLayout>






</RelativeLayout>