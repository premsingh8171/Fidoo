<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl"
        android:layout_marginRight="10dp"
        >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textIsSelectable="true"
        android:text=""
        android:padding="10dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@drawable/chat_bubble_self"
        android:textSize="14dp" />
        <VideoView
            android:id="@+id/message_video"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textIsSelectable="true"
            android:elevation="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/message_videoImg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textIsSelectable="true"
            android:elevation="2dp"
            android:background="@drawable/chat_bubble_self"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textIsSelectable="true"
            android:elevation="2dp"
            android:background="@drawable/chat_bubble_self"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doc_message"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/chat_bubble_self"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:elevation="2dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/doc_message_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:padding="10dp"
                android:elevation="2dp"
                android:src="@drawable/word"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/doc_message_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:maxLength="25"
                android:text="1536220468_79_Sign-Up_URL_Structure.xlsx "
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/audiolayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@drawable/chat_bubble_self"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="0dp">


            <com.keenfin.audioview.AudioView
                android:id="@+id/live"
                android:visibility="gone"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:minified="true"
                app:primaryColor="@color/chatColor"
                app:selectControls="false"
                app:showTitle="false" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rl"
        android:layout_below="@+id/rl"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text=""
        android:textSize="10dp" />

</RelativeLayout>
